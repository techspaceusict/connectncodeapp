<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/ques_ques"
        android:layout_marginTop="13dp"
        android:id="@+id/ANSdet"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ANSim"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ANSim"
            android:text="Ravi Gupta"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_marginTop="2dp"
            android:id="@+id/ANSname"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ANSim"
            android:text="Sep 31"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/Ansdate"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ques_ans"
        android:layout_below="@id/ANSdet"
        android:layout_marginTop="26dp"
        android:textColor="#000000"
        android:text="It had been almost three months since I was talking to this guy I happened to meet at the airport. I was single and so was he. It was evident that both of us had romantic inclination toward each other but it wasn't completely out in the air."
        />


</RelativeLayout>